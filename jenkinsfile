pipeline {
    environment {
        VERSION = "0.8-SNAPSHOT"
    }
    agent any
    stages {
        stage('Build') {
            steps {
                sh './mvnw clean package'
            }
        }
        
        stage('Create docker images') {
            steps {
                script {
                    ./mvnw spring-boot:build-image
                                    }
            }
        }
    }

}
